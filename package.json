{
  "name": "react-html-capture",
  "private": false,
  "description": "A modern React hook for capturing HTML nodes to images with crop, watermark, and auto-capture features",
  "version": "0.1.2",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "eslint .",
    "test": "vitest",
    "preview": "vite preview",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "html-to-image": "^1.11.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/0xMohamed/react-html-capture.git"
  },
  "author": "0xMohamed",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/0xMohamed/react-html-capture/issues"
  },
  "homepage": "https://github.com/0xMohamed/react-html-capture#readme",
  "keywords": [
    "react",
    "hook",
    "html-to-image",
    "capture",
    "screenshot"
  ]
}
